<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Scankit_OnClick"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="#FFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/huawei"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Qr Code Reader"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/radius" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@android:drawable/ic_menu_camera" />

    <Button
        android:layout_marginTop="20dp"
        android:background="#f1dece"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="newViewBtnClick"
        android:textAllCaps="false"
        android:text="Press here to open Camera" />


    <TextView
        android:id="@+id/txt_ekranBastir"
        android:layout_width="374dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:hint="Link will be here..."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/go_toLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to link"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:width="25px"
        android:height="25px" />


</LinearLayout>